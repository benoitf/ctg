{
  "name": "@eclipse-che/theia-manager",
  "version": "0.0.1",
  "description": "Eclipse Che - Theia tooling",
  "author": "Florent Benoit",
  "license": "EPL-2.0",
  "bin": {
    "che:theia": "./dist/index.js"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.4",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "glob-promise": "^3.4.0",
    "js-yaml": "^3.12.0",
    "read-pkg": "3.0.0",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@types/jest": "23.3.9",
    "@types/js-yaml": "^3.11.2",
    "@types/mustache": "^0.8.32",
    "@types/node": "10.12.5",
    "@types/read-pkg": "3.0.0",
    "@types/yargs": "^12.0.1",
    "jest": "23.6.0",
    "mustache": "^3.0.1",
    "rimraf": "2.6.2",
    "ts-jest": "23.10.4",
    "tslint": "5.11.0",
    "typescript": "3.1.6",
    "typescript-formatter": "7.2.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf dist",
    "build": "yarn run compile && yarn run format-code && yarn run tslint-fix && yarn run test",
    "compile": "tsc && chmod +x dist/index.js",
    "watch": "tsc -w",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "format-code": "tsfmt -r",
    "tslint-fix": "tslint --fix --project .",
    "tslint": "tslint --project ."
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
